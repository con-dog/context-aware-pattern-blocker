{
  "manifest_version": 3,
  "name": "Word blocker - Open source",
  "version": "1.0",
  "description": "Replaces specified words and patterns with block characters.",
  "permissions": ["sidePanel", "storage"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"]
    }
  ],
  "side_panel": {
    "default_path": "side-panel.html"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "icons": {
    "16": "./icon.png",
    "32": "./icon.png",
    "48": "./icon.png",
    "128": "./icon.png"
  }
}